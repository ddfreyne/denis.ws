<!DOCTYPE HTML>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title><%= @item[:title] %></title>

        <!-- metadata -->
        <meta name="generator" content="Nanoc <%= Nanoc::VERSION %>">

        <!-- style -->
        <link rel="stylesheet" href="https://cdnjs.com/libraries/10up-sanitize.css">
        <link rel="stylesheet" href="<%= @items['/assets/style/screen.*'].path %>" media="screen">
        <link rel="stylesheet" href="<%= @items['/assets/style/print.*'].path %>" media="print">
        <meta name="viewport" content="width=560">

        <!-- fonts -->
        <link href="https://fonts.googleapis.com/css?family=Space+Mono:400,700" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Karla:400" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">

        <!-- google analytics -->
        <script>
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-15639968-2']);
            _gaq.push(['_trackPageview']);

            (function() {
             var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
             ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
             var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
             })();
        </script>
    </head>
    <body>
        <div id="wrapper">
            <% if @item.fetch(:has_title, true) %>
                <div id="header">
                    <h1><%= @item[:title] %></h1>
                </div>
            <% end %>
            <div id="content">
                <%= yield %>
            </div>
        </div>
    </body>
</html>
