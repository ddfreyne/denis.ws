<!DOCTYPE HTML>
<html prefix="og: http://ogp.me/ns# article: http://ogp.me/ns/article# profile: http://ogp.me/ns/profile# zotero: http://www.zotero.org/namespaces/export#" lang="en">
    <head>
        <meta charset="utf-8">

        <title><%= @item[:title] %></title>

        <!-- metadata -->

        <meta name="generator" content="Nanoc <%= Nanoc::VERSION %>">

        <meta property="og:site_name" content="denis.ws">

        <meta property="og:url" content="https://denis.ws<%= @item_rep.path %>">

        <meta property="og:title" content="<%= @item[:title] %><%= @item[:subtitle] ? ': ' + @item[:subtitle] : '' %>">
        <meta property="dc.title" content="<%= @item[:title] %>">
        <% if @item[:subtitle] %>
            <meta property="dc.alternate" content="<%= @item[:subtitle] %>">
        <% end %>

        <meta property="og:type" content="<%= @item.fetch(:type, 'website') %>">

        <% if @item.fetch(:type, 'website') == 'profile' %>
            <meta property="profile:first_name" content="Denis">
            <meta property="profile:last_name" content="Defreyne">
        <% end %>

        <!-- style -->

        <link rel="stylesheet" href="<%= @items['/assets/style/bare.*'].path %>">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- fonts -->

        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

        <!-- google analytics -->

        <script>
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-15639968-2']);
            _gaq.push(['_trackPageview']);

            (function() {
             var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
             ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
             var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
             })();
        </script>
    </head>
    <body class="font-serif">
        <div class="bg-gray-100 print:bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100">
            <div class="min-h-screen md:w-a4width print:w-auto bg-white dark:bg-gray-900 border-l-8 border-blue-500 print:border-l-0">
                <div class="px-8 py-6 sm:px-16 sm:py-12 print:px-0 print:py-0">
                    <%= yield %>
                </div>
            </div>
        </div>
    </body>
</html>
