#!/usr/bin/env ruby

### Preprocessing rules ######################################################

preprocess do
  def set_mix_dates
    mixes = items.find { |i| i.identifier == '/mixes/' }.children
    mixes.each do |mix|
      mix.identifier =~ %r{/(\d{4}-\d{2}-\d{2})/$}
      mix[:created_on] = Date.parse($1)
    end
  end

  def hide_assets
    items.each do |item|
      if item.identifier =~ /^\/assets/
        item[:is_hidden] = true
      end
    end
  end

  def generate_journal_years
    articles = items.select { |i| i.identifier =~ %r{^/journal/\d{4}/.+$} }
    years = articles.map { |a| Time.parse(a[:created_at]).year }.uniq
    years.each do |year|
      items << Nanoc3::Item.new(
        "<%= render('journal_archive', :year => #{year}) %>",
        { :title => "Articles from #{year}", :is_nav_page => true },
        "/journal/#{year}/"
      )
    end
  end

  def set_is_review
    items.select { |i| i.identifier =~ %r{^/reviews/.+} }.each { |i| i[:is_review] = true }
  end

  def generate_quick_reviews
    items.find { |i| i.identifier == '/reviews/' }[:quick_reviews].each do |quick_review|
      atributes  = quick_review.merge({ :quick => true, :partial => true })
      identifier = "/reviews/#{quick_review[:title].downcase.gsub(/[^a-z]+/, '-')}"
      items << Nanoc3::Item.new('', atributes, identifier)
    end
  end

  set_mix_dates
  hide_assets
  generate_journal_years
  set_is_review
  generate_quick_reviews
end

### Compilation rules ########################################################

compile '/assets/style/*' do
  filter :rainpress
  filter :relativize_paths, :type => :css
end

compile '/journal/feed_private/' do
  filter :erb
end

compile '/sitemap_xml/' do
  filter :erb
end

compile '/404/' do
  filter :erb
end

compile '/assets/*/' do
end

compile '/mixes/*/' do
end

compile '/mixes/*/', :rep => :cue do
  filter :setlist_to_cue
end

compile '/myst/uru_chat_log_formatter/process/' do
end

compile '*' do
  next if item[:partial]

  if item[:markdown]
    filter :rdiscount
  else
    filter :erb
  end

  layout 'review' if @item[:is_review]

  layout 'default'
  filter :rubypants
  filter :relativize_paths, :type => :html
end

### Routing rules ############################################################

route '/404/' do
  '/error/404.php'
end

route '/journal/feed_private/' do
  '/journal/feed_private/index.xml'
end

route '/sitemap_xml/' do
  '/sitemap.xml'
end

route '/assets/*' do
  if item[:version]
    item.identifier[0..-2] + '-v' + item[:version].to_s + '.' + item[:extension]
  else
    item.identifier[0..-2] + '.' + item[:extension]
  end
end

route '/mixes/*/' do
  nil
end

route '/mixes/*/', :rep => :cue do
  item.identifier.chop + '.cue'
end

route '/old/myst/uru_chat_log_formatter/process/' do
  item.identifier.chop + '.rhtml'
end

route '*' do
  if item[:partial]
    nil
  else
    item.identifier + 'index.html'
  end
end

### Layouting rules ##########################################################

layout '*', :erb
